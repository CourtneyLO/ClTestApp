packages:
  yum:
    postgresql14-devel: []

commands:
  01_add_pg_repo:
    command: "yum install -y https://download.postgresql.org/pub/repos/yum/14/redhat/rhel-7-x86_64/pgdg-redhat-repo-latest.noarch.rpm"
  02_disable_pg_module:
    command: "yum -qy module disable postgresql"
  03_clean_yum_cache:
    command: "yum clean all"
  04_install_pg_devel:
    command: "yum install -y postgresql14-devel"
