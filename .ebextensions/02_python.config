container_commands:
  01_migrate:
    command: "source /opt/python/run/virtualenvironment/bin/activate && python manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/virtualenvironment/bin/activate && python manage.py createsu"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "main.settings"
    "PYTHONPATH": "/opt/python/current/app/main:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: main/wsgi.py
    NumProcesses: 3
    NumThreads: 20
